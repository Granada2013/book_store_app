{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "lib": [
      "dom", "es2015"
    ],
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop" : true,
    "strictNullChecks": true,
    "declaration": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "build"]
}
